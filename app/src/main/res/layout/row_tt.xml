<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="@dimen/margin_parent_6dp"


    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/tB_elevation"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/primaryDark"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tV_time_rtt"
                android:layout_gravity="center"
                android:gravity="end"
                android:padding="@dimen/padding_child_3dp"
                style="@style/setFont_white"
                android:text="17:29 PM"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tV_description_rtt"
                android:layout_gravity="center"
                android:gravity="center"

                android:padding="@dimen/padding_child_3dp"
                style="@style/setFont_white"
                android:text="For dinner"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="44dp">

            </TextView>
            <TextView
                android:id="@+id/tV_amount_rtt"
                android:layout_gravity="center"
                android:padding="@dimen/padding_child_3dp"
                style="@style/setFont_white"
                android:text="500"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>